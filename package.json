{
  "name": "hashiiiii-homepage",
  "version": "0.1.0",
  "description": "Personal homepage for hashiiiii.com",
  "type": "module",
  "scripts": {
    "dev": "npm run build:frontend && tsx watch src/spa-server.ts",
    "dev:frontend": "vite",
    "build": "vite build",
    "build:frontend": "vite build",
    "start": "npm run build && node -r tsx/esm src/spa-server.ts",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:local": "vercel dev",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.0.0",
    "dotenv": "^16.0.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "hono": "^4.0.0",
    "katex": "^0.16.22",
    "mermaid": "^11.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.2",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/node": "^5.3.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
